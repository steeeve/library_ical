.row
  .col.s12
    %h1 Cornwall Library iCal
    %h5 Get a digital calendar of your library due dates.

%form.borrower#borrower
  .row
    .input-field.col.s12
      %i.mdi-maps-local-library.prefix
      %input.borrower__number#borrower_number{type: 'text', placeholder: 'Enter your library membership number here'}
      %label{for: 'borrower_number'} Library membership number
  .row
    .input-field.col.s12
      %button.waves-effect.waves-light.btn.purple.darken-2{type: 'submit'} Get my calendar

.row
  .col.s12
    #borrower-calendar.borrower-calendar.card.purple.darken-2
      .card-content.white-text
        .card-title Your calendar URL
        %p Copy and paste into your calendar application:
        .input-field
          %i.mdi-action-event.prefix
          %input.borrower-calendar__url#calendar_url{type: 'text', onclick: "this.select();"}
